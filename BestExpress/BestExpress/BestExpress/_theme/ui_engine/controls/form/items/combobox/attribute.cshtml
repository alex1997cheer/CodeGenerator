@using System;
@using System.Linq;
@using SyntacticSugar;
@using System.Collections;
@using Best.Entities.Tables;
@using Best.Site.Areas.BestPalace.Controllers;

@{
    var model = (List<SysBest_ElementAttr>)Model;
    var width = PubControlHelper.GetControlAttribute(model, "width");
    var height = PubControlHelper.GetControlAttribute(model, "height");
    var class_ = PubControlHelper.GetControlAttribute(model, "class");
    var style = PubControlHelper.GetControlAttribute(model, "style");
    var defaultValue = PubControlHelper.GetControlAttribute(model, "defaultValue");
    var apiKey = PubControlHelper.GetControlAttribute(model, "apiKey");
    var apiValue = PubControlHelper.GetControlAttribute(model, "apiValue");
    var pars = PubControlHelper.GetControlAttribute(model, "pars");
    var callBack = PubControlHelper.GetControlAttribute(model, "callBack");
    var multiSelect = PubControlHelper.GetControlAttribute(model, "multiSelect");
}

<table class="editTable">
    <tr>
        <td class="first">宽度:</td>
        <td>
            <input name="attr.Value" type="text" value="@width" tip="请填写数字,或者数字加px或%" reg="^\d*$|^\d+px$|^\d+\%$" />
            <input name="attr.Key" type="hidden" value="width" />
        </td>
    </tr>
    <tr>
        <td class="first">高度:</td>
        <td>
            <input name="attr.Value" type="text" value="@height" tip="请填写数字,或者数字加px或%" reg="^\d*$|^\d+px$|^\d+\%$" />
            <input name="attr.Key" type="hidden" value="height" />
        </td>
    </tr>
    <tr>
        <td class="first">Class:</td>
        <td>
            <input name="attr.Value" value="@class_" type="text" />
            <input name="attr.Key" type="hidden" value="class" />
        </td>
    </tr>
    <tr>
        <td class="first">Style:</td>
        <td>
            <input name="attr.Value" value="@style" type="text" />
            <input name="attr.Key" type="hidden" value="style" />
        </td>
    </tr>
    <tr>
        <td class="first">默认值:</td>
        <td>
            <input name="attr.Value" value="@defaultValue" type="text" />
            <input name="attr.Key" type="hidden" value="defaultValue" />
        </td>
    </tr>
    <tr>
        <td class="first">接口值:</td>
        <td>
            <input name="attr.Value" value="@apiKey" type="text" />
            <input name="attr.Key" type="hidden" value="apiKey" />
        </td>
    </tr>
    <tr>
        <td class="first">接口文本:</td>
        <td>
            <input name="attr.Value" value="@apiValue" type="text" />
            <input name="attr.Key" type="hidden" value="apiValue" />
        </td>
    </tr>
    <tr>
        <td class="first">是否多选:</td>
        <td>
            <select name="attr.Value">
                <option @((multiSelect=="true"?"selected=selected":"")) value="true">是</option>
                <option @((multiSelect=="false"?"selected=selected":"")) value="false">否</option>
            </select>
            <input name="attr.Key" type="hidden" value="multiSelect" />
        </td>
    </tr>
    <tr>
        <td class="first">参数:</td>
        <td>
            <input name="attr.Value" value="@pars.ToHtmlEncode()" type="text" />
            <input name="attr.Key" type="hidden" value="pars" />
            <span class="icon-search" onclick="$quickFactory('json-data', '#divJsonBox', '#txtJson')"></span>
        </td>
    </tr>
    <tr>
        <td class="first">回调JS:</td>
        <td>
            <textarea style="width:412px" id="jsCallBackCode" name="attr.Value">@callBack</textarea>
            <input name="attr.Key" type="hidden" value="callBack" />
            <span class="icon-search" onclick="$quickFactory('html-code', '#divHtmlCodeBox', '#jsCallBackCode')" style="top:-10px"></span>
        </td>
    </tr>
</table>